{
  "name": "zou",
  "version": "1.1.0",
  "description": "HTML, CSS, JS & FUN! Simple SSG built like an NPM Scripts tasks runner",
  "main": "index.js",
  "scripts": {
    "w-pages": "onchange \"./src/**/*\" -- npm run b-pages",
    "w-sass": "sass  --no-source-map --watch src/styles/sass:public/css",
    "w-js": "npx esbuild src/scripts/main.js --outfile=public/script.js --bundle --watch",
    "b-pages": "nunjucks-to-html --config zou.config.js --baseDir src/pages",
    "b-sass": "sass  --no-source-map src/styles/sass:public/css --style compressed",
    "b-js": "npx esbuild src/scripts/main.js --outfile=public/script.js --bundle --minify",
    "c-static": "copyfiles -u 1 \"./src/static/**/*\" \"public\"",
    "c-root": "copyfiles -u 1 \"./src/favicon.ico\" \"./src/*.txt\"   \"public\"",
    "serve": "alive-server public",
    "copy": "npm-run-all --parallel c-*",
    "watch": "npm-run-all --parallel w-*",
    "build": "npm-run-all copy --parallel b-*",
    "dev": "npm-run-all --parallel copy  watch serve",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "author": "AndiKod",
  "license": "ISC",
  "devDependencies": {
    "alive-server": "^1.3.0",
    "cli-markdown": "^3.0.5",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "nunjucks-to-html": "^1.1.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.3.0",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.5",
    "@tailwindcss/typography": "^0.5.10",
    "typescript": "^5.2.2",
    "zoumacros": "^1.1.2",
    "zoumixins": "^1.0.0"
  }
}
